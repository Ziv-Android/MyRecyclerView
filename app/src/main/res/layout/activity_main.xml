<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ziv.recyclerview.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="RecyclerView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView" />

    <Button
        android:id="@+id/btn_list_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horizontal ListView"/>

    <Button
        android:id="@+id/btn_list_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vertical ListView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridView" />

    <Button
        android:id="@+id/btn_grid_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horizontal GridView"/>

    <Button
        android:id="@+id/btn_grid_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vertical GridView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WaterFall" />

    <Button
        android:id="@+id/btn_waterfall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WaterFall"/>
</LinearLayout>
