<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ziv.recyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ziv.recyclerview.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ziv.recyclerview.listview.vertical.VerticalListview"/>
        <activity android:name="com.ziv.recyclerview.listview.horizontal.HorizontalListview"/>
        <activity android:name="com.ziv.recyclerview.gridview.vertical.VerticalGridview"/>
        <activity android:name="com.ziv.recyclerview.gridview.horizontal.HorizontalGridview"/>
        <activity android:name="com.ziv.recyclerview.waterfall.WaterFallview"/>
    </application>

</manifest>